FROM nginx:alpine

# Copy TLS nginx config (no certs baked in)
COPY nginx/default-ssl.conf /etc/nginx/conf.d/default.conf

# Copy entrypoint that materializes certs from env vars
COPY nginx/docker-entrypoint.tls.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

ENTRYPOINT ["/docker-entrypoint.sh"]